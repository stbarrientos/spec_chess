<h3>My Collaborators</h3>
<ul>
<% @collaborators.each do |c| %>


<li><%= c.email %> <%= link_to "Remove", my_collaborators_path(collaboration_id: c.id), method: :delete %><br>
	<p><%= "Tests:" %></p>




	<select class="tests">
		<option value="">Tests</option>
		<% c.tests.each do |t| %>
		<option value="<%= test_path(t.id) %>"><%= t.name %></option>
		<% end %>
	</select>
</li>
<% end %>
</ul>

<script>
    var elements = document.getElementsByClassName("tests");
    for (var i = 0; i < elements.length; i++) {
    	elements[i].onchange = function() {
    	window.location.href = this.value;
    	}
    };
</script>